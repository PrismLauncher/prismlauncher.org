---
import Logo from "./Logo.astro";
import Button from "./ui/Button.astro";
import DownloadButton from "./ui/DownloadButton.astro";
---

<header
	class="p-4 pb-0 flex flex-col gap-4 sm:flex-row sm:justify-between sm:items-center"
>
	<div
		class="flex flex-col items-center text-center gap-4 sm:text-left sm:flex-row sm:justify-start"
	>
		<Logo class="flex items-center" />
		<nav>
			<ul class="flex items-center gap-4 font-medium">
				<li>
					<a
						class={`hover:underline ${Astro.url.pathname.startsWith("/news") ? "font-bold" : ""}`}
						href="/news"
					>
						News
					</a>
				</li>
				<li>
					<a
						class={`hover:underline ${Astro.url.pathname.startsWith("/about") ? "font-bold" : ""}`}
						href="/about"
					>
						About
					</a>
				</li>
				<li><a class="hover:underline" href="/wiki">Wiki</a></li>
				<li><a class="hover:underline" href="/#get-involved">Community</a></li>
			</ul>
		</nav>
	</div>

	<div class="flex justify-center gap-2">
		<DownloadButton size="sm" />
		<Button
			href="https://opencollective.com/prismlauncher"
			variant="secondary"
			size="sm">Donate</Button
		>
	</div>
</header>
