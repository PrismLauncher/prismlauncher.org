---
import Logo from "./Logo.astro";
import Button from "./ui/Button.astro";
---

<header
	class="p-4 pb-0 flex flex-col gap-4 sm:flex-row sm:justify-between sm:items-center"
>
	<div
		class="flex flex-col items-center text-center gap-4 sm:text-left sm:flex-row sm:justify-start"
	>
		<Logo class="flex items-center" />
		<nav>
			<ul
				class="text-prism-text-light dark:text-prism-text-dark flex items-center gap-4 font-medium"
			>
				<li><a href="/news">News</a></li>
				<li><a href="/about">About</a></li>
				<li><a href="/wiki">Wiki</a></li>
				<li><a href="/#get-involved">Community</a></li>
			</ul>
		</nav>
	</div>

	<div class="flex justify-center gap-2">
		<Button href="/download" variant="primary" size="sm">Download</Button>
		<Button
			href="https://opencollective.com/prismlauncher"
			variant="secondary"
			size="sm">Donate</Button
		>
	</div>
</header>
