---
import TagList from "./TagList.astro";
import { getCollection } from "astro:content";

interface Props {
	activeTag?: string;
	class?: string;
}

const { activeTag, class: className = "" } = Astro.props;

const ARCHIVE_TAG = "Archive";

const posts = (
	await getCollection(
		"news",
		({ data }) => !data.draft && !data.tags.includes(ARCHIVE_TAG),
	)
).sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const popularTags = posts
	.flatMap(({ data }) => data.tags)
	.reduce(
		(counts, tag) => counts.set(tag, (counts.get(tag) || 0) + 1),
		new Map<string, number>(),
	)
	.entries()
	.toArray()
	.sort(([, a], [, b]) => b - a)
	.map(([tag]) => tag);
---

{
	popularTags.length > 0 && (
		<TagList
			tags={popularTags}
			showAll
			class={`gap-2 ${className}`}
			activeTag={activeTag}
		/>
	)
}
